{
	"pluginAlias": "Evhohome",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "Please configure your Evohome platform",
	"footerDisplay": "",
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"default": "Evohome",
				"minLength": 1,
				"required": true
			},
			"username": {
				"title": "Username/Email adress",
				"type": "string",
				"required": true
			},
			"password": {
				"title": "Password",
				"type": "string",
				"required": true
			},
			"temperatureUnit": {
				"title": "Temperature Unit",
				"type": "string",
				"default": "Celsius",
				"oneOf": [
          { "title": "Celsius", "enum": ["Celsius"] },
          { "title": "Fahrenheit", "enum": ["Fahrenheit"] }
        ],
				"required": false
			},
			"locationIndex": {
				"title": "Location Index",
				"type": "integer",
				"required": false
			},
			"switchAway": {
				"title": "Display \"Away Switch\"",
				"type": "boolean",
				"default": true,
				"required": false
			},
			"switchDayOff": {
				"title": "Display \"Day Off Switch\"",
				"type": "boolean",
				"default": false,
				"required": false
			}
		}
	}
}
